@model CarService.Models.Entities.TblEstimateMaster

@{
    ViewData["Title"] = "Create";
}

<h1>Create Estimate</h1>

<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <input asp-for="FldInvoiceNumber" class="form-control" hidden />
            <input asp-for="FldInvoiceType" class="form-control" hidden />
            <input asp-for="FldCreatedOn" class="form-control" hidden />
            <input class="form-check-input" asp-for="FldIsInvoiceGenerated" hidden /> @Html.DisplayNameFor(model => model.FldIsInvoiceGenerated)
            <input asp-for="FldInvoiceCreatedOn" class="form-control" hidden />
            <input asp-for="FldTotalAmount" class="form-control" hidden />

            <div class="form-group" >
                <label asp-for="FldJobId" class="control-label"></label>
                <select asp-for="FldJobId" class="form-control form-select" asp-items="@ViewBag.Jobs"></select>
                <span asp-validation-for="FldJobId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FldEstimateNumber" class="control-label"></label>
                <input asp-for="FldEstimateNumber" class="form-control" />
                <span asp-validation-for="FldEstimateNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create And Continue" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </div>
    </div>
</form>


<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
