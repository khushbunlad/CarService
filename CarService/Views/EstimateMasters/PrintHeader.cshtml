@using CarService.Models.Constants;
@{
    Layout = null;
    //Required : @ViewBag.Watermark
            //Required : @Model.Org
}

<div id="header" class="d-flex flex-column">
    <div class="Watermark">
        <img src="@ViewBag.Watermark" />
    </div>
    <div class="d-flex flex-row">
        @*Logo*@
        <div class="d-flex ps-4 pe-4">
            @if (ViewBag.Logo ==null)
            {
                <img src="@Context.Session.GetString(SessionKeys.OrgLogo)" style="width:auto;height:170px;" />
            }
            else
            {
                <img src="@ViewBag.Logo" style="width:auto;height:170px;" />
            }
        </div>
        @*org name, address & contact*@
        <div class="d-flex flex-fill flex-column ps-4 pe-2">
            <div class="d-flex display-6">@Model.Org.FldOrgName</div>
            @*Address*@
            <div class="d-flex mt-3 fst-italic align-items-baseline">
                @Model.Org.FldAddress
            </div>
            @*GST Number*@
            @if (!String.IsNullOrEmpty(Model.Org.FldGstnumber))
            {
                <div class="d-flex mt-1 align-items-baseline small">
                    <b class="text-secondary pe-2">GSTIN</b> @Model.Org.FldGstnumber
                </div>
            }
            @if (!String.IsNullOrEmpty(Model.Org.FldOrgEmail))
            {
                <div class="d-flex small mt-1"> <b class="text-secondary pe-2">Email</b> <span class="text-primary">@Model.Org.FldOrgEmail</span></div>
            }
            @*Contact*@
            <div class="d-flex flex-row align-items-baseline small mt-1">
                @if (!string.IsNullOrEmpty(Model.Org.FldContactNumber1) && !string.IsNullOrEmpty(Model.Org.FldContactPerson1))
                {
                    <div class="d-flex"><b class="text-secondary pe-2">@Model.Org.FldContactPerson1</b>@Model.Org.FldContactNumber1</div>
                }
                @if (!string.IsNullOrEmpty(Model.Org.FldContactNumber2) && !string.IsNullOrEmpty(Model.Org.FldContactPerson2))
                {
                    <div class="d-flex ps-2 pe-2">|</div>
                    <div class="d-flex"><b class="text-secondary pe-2">@Model.Org.FldContactPerson2</b>@Model.Org.FldContactNumber2</div>
                }

            </div>

        </div>
    </div>
</div>
