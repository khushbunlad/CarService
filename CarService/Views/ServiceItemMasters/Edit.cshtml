@model CarService.Models.Entities.TblServiceItemMaster
@using CarService.Models.Constants;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Service Item</h1>

<hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FldServiceItemId" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FldItemName" class="control-label"></label>
                <input asp-for="FldItemName" class="form-control" />
                <span asp-validation-for="FldItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FldHsnNumber" class="control-label"></label>
                <input asp-for="FldHsnNumber" class="form-control" />
                <span asp-validation-for="FldHsnNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FldItemType" class="control-label"></label>
                <div class="form-check">
                    <input type="radio" class="form-check-input" name="FldItemType" id="FldItemType_@ServiceItemTypes.Part" value="@ServiceItemTypes.Part" checked="checked" />
                    <label class="form-check-label" for="FldItemType_@ServiceItemTypes.Part">@ServiceItemTypes.Part</label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" name="FldItemType" id="FldItemType_@ServiceItemTypes.Labor" value="@ServiceItemTypes.Labor" />
                    <label class="form-check-label" for="FldItemType_@ServiceItemTypes.Labor">@ServiceItemTypes.Labor</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FldQuanitityUnit" class="control-label"></label>
                <select asp-for="FldQuanitityUnit" class="form-control form-select" asp-items="Units.UnitList"></select>
                <span asp-validation-for="FldQuanitityUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FldIdealAmount" class="control-label"></label>
                <input asp-for="FldIdealAmount" class="form-control" />
                <span asp-validation-for="FldIdealAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-primary" >Back to List</a>
            </div>
        </div>
    </div>
</form>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
