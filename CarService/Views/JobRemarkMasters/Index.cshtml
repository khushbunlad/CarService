@model IEnumerable<CarService.Models.Entities.TblJobRemarkMaster>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-row pb-5">
    <div class="d-flex flex-fill display-6">Job Remarks</div>
    <div class="d-flex align-items-center">
        <a asp-action="Create" class="btn btn-success">Create New Job Remark</a>
    </div>
</div>

@if (Model == null || Model.Count() == 0)
{
    <div class="d-flex p-4 justify-content-center align-items-center text-secondary">No Suggention Remarks</div>
}
else
{
    <div class="d-flex justify-content-end fst-italic text-info">@Model.Count() Remarks</div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FldRemarkTitle)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FldRemarkTitle)
                    </td>
                    <td class="text-end" >
                        <a asp-action="Delete" asp-route-id="@item.FldRemarkId"><img src="~/images/delete.png" class="IconButton" title="Delete User" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}