@model IEnumerable<CarService.Models.Entities.TblServiceItemMaster>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-row pb-5">
    <div class="d-flex flex-fill display-6">Service Items</div>
    <div class="d-flex align-items-center">
        <a asp-action="Create" class="btn btn-success">Create New Service Item</a>
    </div>
</div>

@if (Model == null || Model.Count() == 0)
{
    <div class="d-flex p-4 justify-content-center align-items-center text-secondary">No Service Items added</div>
}
else
{
    <div class="d-flex justify-content-end fst-italic text-info">@Model.Count() Service Items</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FldItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FldItemType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FldQuanitityUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FldIdealAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FldItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldQuanitityUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldIdealAmount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FldServiceItemId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.FldServiceItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
