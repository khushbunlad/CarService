@model CarService.Models.Entities.TblJobRemark

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="FldJobId" class="form-control" hidden />
        <div class="form-group">
            <label asp-for="FldRemarkTitle" class="control-label"></label>
            <input asp-for="FldRemarkTitle" class="form-control" list="RemarkSuggestion" />
            <span asp-validation-for="FldRemarkTitle" class="text-danger"></span>
            <datalist id="RemarkSuggestion">
                @foreach (SelectListItem item in ViewBag.Remarks)
                {
                    <option value="@item.Text">@item.Text</option>
                }
            </datalist>
        </div>
        <div class="form-group">
            @*Method called from parent page*@
            <input type="button" value="Create" class="btn btn-primary" onclick="CreateJobItem()" />
        </div>
    </div>
</div>
